<Page
    x:Class="App1.Page100"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Spacing="15"
            Width="400">

            <TextBlock 
                Text="Профиль пользователя"
                FontSize="20"
                FontWeight="Bold"/>

            <Image 
                Source="ms-appx:///Assets/USSR.png" 
                Width="100" 
                Height="100"
                Stretch="UniformToFill"/>

            <TextBlock 
                Text="Имя: Иван Иванов"
                FontSize="16"
                Foreground="DarkBlue"/>

            <TextBlock 
                Text="Создать пост"
                FontSize="18"
                FontWeight="Bold"
                Margin="0,20,0,0"/>

            <TextBox 
                x:Name="PostTextBox" 
                PlaceholderText="Введите текст поста"
                Height="100"
                Width="350"/>

            <Button 
                Content="Опубликовать"
                Click="PublishPost_Click"
                Width="150"/>

            <TextBlock 
                Text="Лента постов"
                FontSize="18"
                FontWeight="Bold"
                Margin="0,20,0,0"/>

            <StackPanel 
                x:Name="PostsPanel"
                Spacing="10"/>
        </StackPanel>
    </Grid>
</Page>
