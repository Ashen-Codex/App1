<Page
    x:Class="App1.Page28"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <muxc:TabView>
        <muxc:TabViewItem Header="Обзор">
            <ScrollViewer Padding="20">
                <TextBlock Text="Добро пожаловать! Здесь вы можете выбрать задание из меню слева." 
                       FontSize="18" TextWrapping="Wrap"/>
            </ScrollViewer>
        </muxc:TabViewItem>
        <muxc:TabViewItem Header="Избранное">
            <TextBlock Text="Ваши избранные задания появятся здесь." 
                   Padding="20" TextWrapping="Wrap"/>
        </muxc:TabViewItem>
        <muxc:TabViewItem Header="История">
            <TextBlock Text="Недавно открытые задания." 
                   Padding="20" TextWrapping="Wrap"/>
        </muxc:TabViewItem>
    </muxc:TabView>
</Page>
