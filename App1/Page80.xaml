<Page
    x:Class="App1.Page80"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Spacing="16">

        <MediaElement x:Name="mediaElement" Width="400" Height="220" AutoPlay="False" />

        <Slider x:Name="progressSlider" Minimum="0" Maximum="100" Value="0" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <Button Content="Play" Click="Play_Click"/>
            <Button Content="Pause" Click="Pause_Click"/>
            <Button Content="Stop" Click="Stop_Click"/>
        </StackPanel>

        <TextBlock x:Name="timeTextBlock" Text="00:00 / 00:00" HorizontalAlignment="Center" FontWeight="SemiBold"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
            <TextBlock Text="Volume"/>
            <Slider x:Name="volumeSlider" Minimum="0" Maximum="100" Value="0.5" Width="160" ValueChanged="VolumeSlider_ValueChanged"/>
        </StackPanel>
    </StackPanel>
</Page>

