<Page
    x:Class="App1.Page85"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Spacing="15"
            Width="400">

            <TextBlock 
                Text="Включение/отключение:"
                FontSize="16"
                FontWeight="Bold"/>
            <ToggleSwitch 
                x:Name="EnableToggle"
                Header="Включить функцию"
                OnContent="Включено"
                OffContent="Выключено"/>

            <TextBlock 
                Text="Численный параметр:"
                FontSize="16"
                FontWeight="Bold"
                Margin="0,20,0,0"/>
            <Slider 
                x:Name="NumericSlider"
                Minimum="0"
                Maximum="100"
                Value="50"
                Width="350"/>

            <TextBlock 
                Text="Выбор параметра:"
                FontSize="16"
                FontWeight="Bold"
                Margin="0,20,0,0"/>
            <ComboBox 
                x:Name="ParameterComboBox"
                PlaceholderText="Выберите параметр">
                <ComboBoxItem Content="Параметр 1"/>
                <ComboBoxItem Content="Параметр 2"/>
                <ComboBoxItem Content="Параметр 3"/>
            </ComboBox>

            <Button 
                Content="Сохранить"
                Click="SaveSettings_Click"
                Width="150"
                Margin="0,20,0,0"/>

        </StackPanel>
    </Grid>
</Page>
