<Page
    x:Class="App1.Page96"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Spacing="15"
            Width="400">

            <TextBlock 
                Text="Сумма кредита (руб.):"
                FontSize="16"/>
            <TextBox 
                x:Name="LoanAmountTextBox" 
                PlaceholderText="Введите сумму"
                Height="40"
                Width="350"/>

            <TextBlock 
                Text="Процентная ставка (%):"
                FontSize="16"/>
            <Slider 
                x:Name="InterestRateSlider"
                Minimum="0.1"
                Maximum="20.0"
                Value="10.0"
                Width="350"/>
            <TextBlock 
                x:Name="InterestRateTextBlock"
                Text="10.0%"
                FontSize="16"
                Foreground="DarkBlue"/>

            <TextBlock 
                Text="Срок кредита (лет):"
                FontSize="16"/>
            <TextBox 
                x:Name="LoanTermTextBox" 
                PlaceholderText="Введите срок"
                Height="40"
                Width="350"/>

            <Button
                Content="Рассчитать"
                Click="Calculate_Click"
                Width="150"/>

            <TextBlock 
                Text="Ежемесячный платёж:"
                FontSize="16"
                FontWeight="Bold"/>
            <TextBlock 
                x:Name="ResultTextBlock"
                Text=""
                FontSize="18"
                Foreground="DarkBlue"/>

        </StackPanel>
    </Grid>
</Page>
