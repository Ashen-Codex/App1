<Page
    x:Class="App1.Page77"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="20">

        <!-- TextBox для результата -->
        <TextBox x:Name="ResultBox" FontSize="32" IsReadOnly="True" Margin="0,0,0,10"/>

        <!-- Grid для кнопок калькулятора -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="7" Grid.Row="0" Grid.Column="0" Click="NumBtn_Click"/>
            <Button Content="8" Grid.Row="0" Grid.Column="1" Click="NumBtn_Click"/>
            <Button Content="9" Grid.Row="0" Grid.Column="2" Click="NumBtn_Click"/>
            <Button Content="÷" Grid.Row="0" Grid.Column="3" Click="OpBtn_Click"/>

            <Button Content="4" Grid.Row="1" Grid.Column="0" Click="NumBtn_Click"/>
            <Button Content="5" Grid.Row="1" Grid.Column="1" Click="NumBtn_Click"/>
            <Button Content="6" Grid.Row="1" Grid.Column="2" Click="NumBtn_Click"/>
            <Button Content="×" Grid.Row="1" Grid.Column="3" Click="OpBtn_Click"/>

            <Button Content="1" Grid.Row="2" Grid.Column="0" Click="NumBtn_Click"/>
            <Button Content="2" Grid.Row="2" Grid.Column="1" Click="NumBtn_Click"/>
            <Button Content="3" Grid.Row="2" Grid.Column="2" Click="NumBtn_Click"/>
            <Button Content="-" Grid.Row="2" Grid.Column="3" Click="OpBtn_Click"/>

            <Button Content="0" Grid.Row="3" Grid.Column="0" Click="NumBtn_Click"/>
            <Button Content="." Grid.Row="3" Grid.Column="1" Click="NumBtn_Click"/>
            <Button Content="=" Grid.Row="3" Grid.Column="2" Click="EqualBtn_Click"/>
            <Button Content="+" Grid.Row="3" Grid.Column="3" Click="OpBtn_Click"/>

            <Button Content="C" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Click="ClearBtn_Click" Background="OrangeRed" Foreground="White"/>

        </Grid>

        <TextBlock Text="История:" FontWeight="Bold" Margin="0,15,0,5"/>
        <ScrollViewer Height="100">
            <StackPanel x:Name="HistoryPanel"/>
        </ScrollViewer>
    </StackPanel>
</Page>

