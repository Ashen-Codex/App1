<Page
    x:Class="App1.Page51"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1">

    <Grid>
        <StackPanel 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Spacing="15"
            Width="700">

            <TextBlock 
                Text="Задание 51: Инкапсуляция логики в ViewModel"
                FontSize="20"
                FontWeight="Bold"/>

            <TextBlock 
                Text="{Binding Title}" 
                FontSize="18" 
                Foreground="DarkBlue"/>

            <Button 
                Content="Обновить заголовок" 
                Click="UpdateTitle_Click"
                Width="200"/>

            <TextBlock Text="Элементы:" Margin="0,10,0,0"/>
            <ListView 
                ItemsSource="{Binding Items}"
                Height="200"
                Width="350">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="16"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </Grid>
</Page>
