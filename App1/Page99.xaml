<Page
    x:Class="App1.Page99"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Spacing="15"
            Width="400">

            <TextBlock 
                x:Name="QuestionTextBlock"
                Text="Вопрос 1: Какой цвет неба?"
                FontSize="20"
                FontWeight="Bold"/>
    
            <RadioButton 
                x:Name="Option1" 
                Content="Красный"
                GroupName="Answers"/>
            <RadioButton 
                x:Name="Option2" 
                Content="Синий"
                GroupName="Answers"/>
            <RadioButton 
                x:Name="Option3" 
                Content="Зелёный"
                GroupName="Answers"/>
            <RadioButton 
                x:Name="Option4" 
                Content="Жёлтый"
                GroupName="Answers"/>

            <Button 
                x:Name="NextButton"
                Content="Следующий вопрос"
                Click="NextQuestion_Click"
                Width="150"/>

            <TextBlock 
                Text="Прогресс:"
                FontSize="16"
                FontWeight="Bold"/>
            <ProgressBar 
                x:Name="Progressbar"
                Height="10"
                Width="350"/>

            <TextBlock 
                x:Name="ResultTextBlock"
                Text=""
                FontSize="18"
                Foreground="DarkBlue"/>

        </StackPanel>
    </Grid>
</Page>
